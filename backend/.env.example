# ============================================
# Innonet Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# REQUIRED SETTINGS (Must be set)
# ============================================

# Authentication - Generate a secure random key
# Example: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# Neo4j Password
NEO4J_PASSWORD=your-neo4j-password-here

# OpenAI API Key (required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Database URL
DATABASE_URL=postgresql+asyncpg://postgres:postgres_dev_change_me@localhost:5432/innonet

# PostgreSQL Password (for Docker)
POSTGRES_PASSWORD=postgres_dev_change_me

# Redis URL (update password to match REDIS_PASSWORD)
REDIS_URL=redis://:redis_dev_change_me@localhost:6379/0

# Redis Password (for Docker)
REDIS_PASSWORD=redis_dev_change_me

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Application Settings
APP_NAME=Innonet API
DEBUG=true
API_V1_PREFIX=/api/v1

# JWT Token Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Payment Settings (optional - leave empty if not using)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# SendGrid Email Settings (optional - leave empty if not using)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@innonet.com

# OpenAI Model Settings
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4-turbo-preview

# Neo4j Settings
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
