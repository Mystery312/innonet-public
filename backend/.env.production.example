# Innonet Production Environment Configuration
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control

# ============================================
# REQUIRED - Application Security
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-production-secret-key-generate-with-openssl

# ============================================
# REQUIRED - Database Configuration
# ============================================
# PostgreSQL (AWS RDS)
# Format: postgresql+asyncpg://user:password@host:5432/database
DATABASE_URL=postgresql+asyncpg://innonet_user:your-password@your-rds-endpoint.region.rds.amazonaws.com:5432/innonet

# Redis (AWS ElastiCache)
# Format: redis://host:6379/0 or redis://:password@host:6379/0
REDIS_URL=redis://your-elasticache-endpoint.region.cache.amazonaws.com:6379/0

# Neo4j (Neo4j Aura)
# Format: neo4j+s://instance-id.databases.neo4j.io
NEO4J_URI=neo4j+s://your-instance-id.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-aura-password

# ============================================
# REQUIRED - External Services
# ============================================
# OpenAI API (for embeddings and AI features)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4-turbo-preview

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key

# SendGrid (for emails)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# REQUIRED - Production Settings
# ============================================
# Environment
ENVIRONMENT=production
DEBUG=false

# CORS - Your production frontend URL
FRONTEND_URL=https://app.yourdomain.com

# API Settings
API_V1_PREFIX=/api/v1
APP_NAME=Innonet API

# ============================================
# REQUIRED - Monitoring
# ============================================
# Sentry for error tracking (get DSN from sentry.io)
SENTRY_DSN=https://your-key@your-org.ingest.sentry.io/your-project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# JWT Settings (can use defaults)
# ============================================
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ============================================
# Database Pool Settings (adjust for load)
# ============================================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_PRE_PING=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_AI=20/minute
